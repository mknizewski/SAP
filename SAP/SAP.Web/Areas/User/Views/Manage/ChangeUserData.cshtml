@model SAP.Web.Areas.User.Models.UserDataViewModel

@{
    ViewBag.Title = "Zmiana danych osobowych";
}

<h2>Zmiana danych osobowych.</h2>
<h4>Zmień swoje dane.</h4>
<hr />

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href='@Url.Action("Index", "Home")' class="list-group-item active">
                <h4 class="list-group-item-heading">Główna</h4>
            </a>
            <a href='@Url.Action("Index", "Manage")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie</h4>
            </a>
            <a href='@Url.Action("Index", "Tournament")' class="list-group-item">
                <h4 class="list-group-item-heading">Twoje turnieje</h4>
            </a>
            <a href='@Url.Action("Index", "Solution")' class="list-group-item">
                <h4 class="list-group-item-heading">Zgłoszone rozwiązania</h4>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Powiadomienia <span class="badge">69</span></h4>
            </a>
        </div>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm("ChangeUserData", "Manage", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h5>Dane obowiązkowe.</h5>
            <hr />

            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Surname, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Surname, "" , new { @class = "text-danger" })
                </div>
            </div>

            <h5>Dane opcjonalne.</h5>
            <hr />

            <div class="form-group">
                @Html.LabelFor(x => x.UserCity, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserCity, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserCity, "" , new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.UserStreet, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserStreet, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserStreet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.UserHouseNumber, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserHouseNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserHouseNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.UserPostalCode, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserPostalCode, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserPostalCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.UserPhone, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.UserPhone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.UserPhone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <a href='@Url.Action("Index", "Manage")' class="btn btn-default">Cofnij</a>
                    <input type="submit" class="btn btn-success" value="Zapisz zmiany" />
                </div>
            </div>
        }
    </div>
</div>

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = "" })'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Użytkownik</a></li>
    <li><a href='@Url.Action("Index", "Manage")'>Zarządzanie</a></li>
    <li class="active">Zmiana danych osobowych</li>
</ul>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}