@model SAP.Web.Areas.User.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Zmiana hasła";
}

<h2>Zmiana hasła.</h2>
<h4>Wprowadź nowe hasło do systemu.</h4>
<hr />

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href='@Url.Action("Index", "Home")' class="list-group-item active">
                <h4 class="list-group-item-heading">Główna</h4>
            </a>
            <a href='@Url.Action("Index", "Manage")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie</h4>
            </a>
            <a href='@Url.Action("Index", "Tournament")' class="list-group-item">
                <h4 class="list-group-item-heading">Twoje turnieje</h4>
            </a>
            <a href='@Url.Action("Index", "Solution")' class="list-group-item">
                <h4 class="list-group-item-heading">Zgłoszone rozwiązania</h4>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Powiadomienia <span class="badge">69</span></h4>
            </a>
        </div>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            <fieldset>
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(x => x.OldPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.NewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <a href='@Url.Action("Index", "Manage")' class="btn btn-default">Cofnij</a>
                        <input type="submit" class="btn btn-success" value="Zmień hasło" />
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = "" })'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Użytkownik</a></li>
    <li><a href='@Url.Action("Index", "Manage")'>Zarządzanie</a></li>
    <li class="active">Zmiana hasła</li>
</ul>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}