@model SAP.Web.Areas.User.Models.ScoresViewModel
@{
    ViewBag.Title = "Wyniki turnieju";
    int i = 1;
}

<h2>Wyniki</h2>
<hr />

@foreach (var item in Model.HistoryPhases)
{
    <div class="well">
        <h4>@item.PhaseTitle</h4>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Pozycja</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Suma punktów</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var scores in item.Scores)
                {
                    <tr>
                        <td>@i</td>
                        <td>@scores.FirstName</td>
                        <td>@scores.LastName</td>
                        <td>@scores.Score</td>
                    </tr>

                    i += 1;
                }
            </tbody>
        </table>
    </div>
}

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = "" })'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Użytkownik</a></li>
    <li><a href='@Url.Action("Index")'>Twoje turnieje</a></li>
    <li>Wyniki</li>
</ul>