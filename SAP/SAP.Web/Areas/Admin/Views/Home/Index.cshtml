@model SAP.Web.Areas.Admin.Models.AdminDataViewModel
@{
    ViewBag.Title = User.Identity.Name;
}

<h2>Konto administratora SAP.</h2>
<h4>Strona główna.</h4>
<hr />

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Wybierz jedną z poniższych opcji</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        Zmiana ustawień konta
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangeData", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-4">
                        Zmiana hasła
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangePassword", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            </div>
        </div>

    </div>
</div>

<div class="row">

    <div class="col-md-3">
        <div class="list-group">
            <a href='@Url.Action("Index", "Home")' class="list-group-item active">
                <h4 class="list-group-item-heading">Główna</h4>
                <p class="list-group-item-text">Strona główna Twojego konta.</p>
            </a>
            <a href="#" data-toggle="modal" data-target="#myModal" class="list-group-item">
                <h4 class="list-group-item-heading">Ustawienia</h4>
                <p class="list-group-item-text">Zmiana ustawień konta.</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie kontami</h4>
                <p class="list-group-item-text">Dostęp do zarządzania kontami użytkowników serwisu.</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie turniejami</h4>
                <p class="list-group-item-text">Dostęp do zarządzania turniejami i zadaniami.</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie kompilatorami</h4>
                <p class="list-group-item-text">Dostęp do ustawień kompilatorów.</p>
            </a>
        </div>
    </div>
    <div class="col-md-9 form-horizontal">

        @SAP.Web.HTMLHelpers.Alert.GetAlert(ViewBag.Message)

        <h4>Informacje o koncie.</h4>
        <hr />
        
        <div class="form-group">
            @Html.Label("Imię", new { @class = "col-md-2 control-label"})
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @disabled = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Nazwisko", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @disabled = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @disabled = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Rola w systemie", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Role, new { @class = "form-control", @disabled = "true" })
            </div>
        </div>

    </div>

</div>

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = ""})'>Główna</a></li>
    <li class="active">Administrator</li>
</ul>