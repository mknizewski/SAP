@{
    ViewBag.Title = "Zarządzanie turniejami";
}

<h2>Zarządzanie turniejami.</h2>
<hr />

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Wybierz jedną z poniższych opcji</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        Zmiana ustawień konta
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangeData", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        Zmiana hasła
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangePassword", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href='@Url.Action("Index", "Home")' class="list-group-item">
                <h4 class="list-group-item-heading">Główna</h4>
            </a>
            <a href="#" data-toggle="modal" data-target="#myModal" class="list-group-item">
                <h4 class="list-group-item-heading">Ustawienia</h4>
            </a>
            <a href='@Url.Action("ManageAccounts", "ManageUser")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie kontami</h4>
            </a>
            <a href='@Url.Action("Index", "ManageTournaments")' class="list-group-item active">
                <h4 class="list-group-item-heading">Zarządzanie turniejami</h4>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie kompilatorami</h4>
            </a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Opcje zarządzania turniejami</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4><span class="glyphicon glyphicon-tower"></span> Turnieje</h4>
                        <hr />
                        <ul>
                            <li><a href='@Url.Action("AddTournament")'>Dodaj turniej</a></li>
                            <li><a href="#">Edycja turnieju</a></li>
                            <li><a href='@Url.Action("TournamentsCourse")'>Zarządzanie przebiegiem</a></li>
                        </ul>
                        <br />
                        <h4><span class="glyphicon glyphicon-tasks"></span> Zadania</h4>
                        <hr />
                        <ul>
                            <li><a href="#">Dodaj zadanie</a></li>
                            <li><a href="#">Wyświetl zadania</a></li>
                            <li><a href="#">Edycja zadania</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4><span class="glyphicon glyphicon-book"></span> Dane testowe</h4>
                        <hr />
                        <ul>
                            <li><a href="#">Wyświetl dane testowe</a></li>
                            <li><a href='@Url.Action("AddTestDataTask")'>Dodaj dane testowe</a></li>
                        </ul>
                        <br />
                        <br />
                        <h4><span class="glyphicon glyphicon-wrench"></span> Narzędzia</h4>
                        <hr />
                        <ul>
                            <li><a href='@Url.Action("TodaySystemTask")'>Dzisiejsze zadania systemowe</a></li>
                            <li><a href='@Url.Action("Configuration")'>Konfiguracja</a></li>
                            <li><a href="#">Dane historyczne</a></li>
                            <li><a href='@Url.Action("Index", "News")'>Aktualności</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = ""})'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Administrator</a></li>
    <li class="active">Zarządzanie turniejami</li>
</ul>