@model SAP.Web.Areas.Admin.Models.AddAdminViewModel
@{
    ViewBag.Title = "Dodaj nowego administratora";
}

<h2>Dodaj nowego administratora</h2>
<hr />

@* Menu modal *@
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Wybierz jedną z poniższych opcji</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        Zmiana ustawień konta
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangeData", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-4">
                        Zmiana hasła
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangePassword", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href='@Url.Action("Index", "Home")' class="list-group-item">
                <h4 class="list-group-item-heading">Główna</h4>
            </a>
            <a href="#" data-toggle="modal" data-target="#myModal" class="list-group-item">
                <h4 class="list-group-item-heading">Ustawienia</h4>
            </a>
            <a href='@Url.Action("ManageAccounts", "ManageUser")' class="list-group-item active">
                <h4 class="list-group-item-heading">Zarządzanie kontami</h4>
            </a>
            <a href='@Url.Action("Index", "ManageTournaments")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie turniejami</h4>
            </a>
            <a href='@Url.Action("Index", "ManageCompilers")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie kompilatorami</h4>
            </a>
            <a href='@Url.Action("Index", "Contact")' class="list-group-item">
                <h4 class="list-group-item-heading">Wiadomości</h4>
            </a>
        </div>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm("AddAdministrator", "ManageUser", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Dodaj nowego administratora</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.FirstName, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(x => x.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.LastName, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(x => x.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Email, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(x => x.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Password, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" class="btn btn-success" value="Dodaj" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = "" })'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Administrator</a></li>
    <li class="active">Dodaj konto</li>
</ul>