@model SAP.Web.Areas.Admin.Models.CompilerViewModel
@{
    ViewBag.Title = "Zarządzanie kompilatorami";
}

<h2>Zarządzanie kompilatorami</h2>
<hr />

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Wybierz jedną z poniższych opcji</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        Zmiana ustawień konta
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangeData", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-4">
                        Zmiana hasła
                    </div>
                    <div class="col-md-8">
                        <a href='@Url.Action("ChangePassword", "ManageUser")' class="btn btn-info">Przejdź &raquo;</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href='@Url.Action("Index", "Home")' class="list-group-item">
                <h4 class="list-group-item-heading">Główna</h4>
            </a>
            <a href="#" data-toggle="modal" data-target="#myModal" class="list-group-item">
                <h4 class="list-group-item-heading">Ustawienia</h4>
            </a>
            <a href='@Url.Action("ManageAccounts", "ManageUser")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie kontami</h4>
            </a>
            <a href='@Url.Action("Index", "ManageTournaments")' class="list-group-item">
                <h4 class="list-group-item-heading">Zarządzanie turniejami</h4>
            </a>
            <a href='@Url.Action("Index", "ManageCompilers")' class="list-group-item active">
                <h4 class="list-group-item-heading">Zarządzanie kompilatorami</h4>
            </a>
            <a href='@Url.Action("Index", "Contact")' class="list-group-item">
                <h4 class="list-group-item-heading">Wiadomości</h4>
            </a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Interfejs komunikacyjny z API Sandbox</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-5">
                                <p style="margin-top:6px;">Informacje o API:</p>
                            </div>
                            <div class="col-md-7">
                                <a href='@Url.Action("GetInfo")' onclick="displayLoadingAlert(true)" class="btn btn-default" style="margin-bottom: 15px;">Pobierz informacje</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <p style="margin-top:6px;">Testowa kompilacja:</p>
                            </div>
                            <div class="col-md-7">
                                <a href='@Url.Action("CompileTest")' onclick="displayLoadingAlert(true)" class="btn btn-default" style="margin-bottom: 15px;">Kompiluj testowo</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-5">
                                <p style="margin-top:6px;">Zmień scieżki:</p>
                            </div>
                            <div class="col-md-7">
                                <a href='@Url.Action("ChangePath")' onclick="displayLoadingAlert(true)" class="btn btn-default" style="margin-bottom: 15px;">Zmień scieżki</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <p style="margin-top:6px;">Zmień argumenty:</p>
                            </div>
                            <div class="col-md-7">
                                <a href='@Url.Action("ChangePath")' onclick="displayLoadingAlert(true)" class="btn btn-default" style="margin-bottom: 15px;">Zmień argumenty</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = "" })'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Administrator</a></li>
    <li class="active">Zarządzanie kompilatorami</li>
</ul>