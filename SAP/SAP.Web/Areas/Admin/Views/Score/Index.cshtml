@model SAP.Web.Areas.Admin.Models.ScoresViewModel
@{
    ViewBag.Title = "Wyniki";
    int i = 1;
}

<h2>Wyniki turnieju</h2>
<hr />

<h3>Aktualne wyniki</h3>
<div class="well">
    <h4>@Model.CurrentPhase.PhaseTitle</h4>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Pozycja</th>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Suma punktów</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CurrentPhase.Scores)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Score</td>
                </tr>

                i += 1;
            }
        </tbody>
    </table>
</div>

<h3>Wyniki z poprzednich faz</h3>
@foreach (var item in Model.HistoryPhases)
{
    i = 1;
    <div class="well">
        <h4>@item.PhaseTitle</h4>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Pozycja</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>Suma punktów</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var scores in item.Scores)
                {
                    <tr>
                        <td>@i</td>
                        <td>@scores.FirstName</td>
                        <td>@scores.LastName</td>
                        <td>@scores.Score</td>
                    </tr>

                    i += 1;
                }
            </tbody>
        </table>
    </div>
}

<ul class="breadcrumb">
    <li><a href='@Url.Action("Index", "Home", new { area = ""})'>Główna</a></li>
    <li><a href='@Url.Action("Index", "Home")'>Administrator</a></li>
    <li><a href='@Url.Action("Index")'>Zarządzanie turniejami</a></li>
    <li><a href='@Url.Action("TournamentList", "ManageTournaments")'>Przegląd turniejów</a></li>
    <li class="active">Wyniki turnieju</li>
</ul>