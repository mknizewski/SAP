@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post,new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        if (HttpContext.Current.User.IsInRole("User"))
        {
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Witaj " + User.Identity.Name + "!", "Index", "Home", new { Area = "User" }, htmlAttributes: new { title = "Moje konto" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj się</a></li>
            </ul>
        }
        else if (HttpContext.Current.User.IsInRole("Admin"))
        {
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Witaj " + User.Identity.Name + "!", "Index", "Home", new { Area = "Admin" }, htmlAttributes: new { title = "Moje konto" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Wyloguj się</a></li>
            </ul>
        }
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Rejestracja", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Zaloguj się", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}