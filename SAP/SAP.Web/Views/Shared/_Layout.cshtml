<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Serwis algorytmicznych potyczek</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <link href="~/favicon.ico" rel="shortcut icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/time")
    @Scripts.Render("~/bundles/global")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="color: cornflowerblue;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Serwis algorytmicznych potyczek", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Aktualności", "About", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Turnieje", "Index", "Home", new { area = "Tournament" }, null)</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Co nowego", "Features", "Home", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 25px;">
        <div class="alert-screen" id="alertScreen" style="display:none;">
            <div class="alert-gif">
                <img src="~/Content/loading.gif" alt="LoadingScreen" />
            </div>
            <p id="alertMessage">Proszę czekać</p>
        </div>
        @Alert.GetAlert(TempData["Alert"])
        @RenderBody()
        <hr />
        <footer>
            <p id="time">Czas systemowy @DateTime.Now.ToString("HH:mm:ss, dd.MM.yyyy")</p>
            <div class="row">
                <div class="col-md-6">
                    <p style="float:left;">&copy; @DateTime.Now.Year - Serwis algorytmicznych potyczek - Mateusz Kniżewski</p>
                </div>
                <div class="col-md-6">
                    <p style="float:right;">Wersja: @ServerDictionary.AppVersion</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>